<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'torontocityhall.jpg', class: 'img-responsive', height: '50%', width: '50%' %> <!-- FIX CSS SIZING LATER -->
      <div class="carousel-caption">
        Find the hidden gems in Toronto
      </div>
    </div>
    <div class="item">
      <%= image_tag 'cntower.jpg', class: 'img-responsive', height: '50%', width: '50%' %> <!-- FIX CSS SIZING LATER -->
      <div class="carousel-caption">
        Explore it's iconic locations
      </div>
    </div>
    <div class="item">
      <%= image_tag 'bar1.jpg', class: 'img-responsive', height: '50%', width: '50%' %> <!-- FIX CSS SIZING LATER -->
      <div class="carousel-caption">
        Enjoy it's best Bars and Restaurants
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
<div class="booyah-box col-xs-8 col-xs-offset-2">
  <h1><%= link_to place.name, place_path(place) %></h1>
  <i><%= place.address %></i><br /><br />
  <p> 

    <% if place.photos.present? %>
    <div class="col-xs-3">
      <%= image_tag place.photos.first.picture, class: "img-responsive img-rounded"%>
      
    </div>
    <% end %>
    <div class="col-xs-9">
      <%= place.description %>

      <% if place.user.present? %>
      <p>
        <br />
        <small><%= place.user.email %></small>
      </p>
      <% end %>  
    </div>
  </p>
  <br />




  <% if place.comments.present? %>
  <div class="col-xs-12">
    <blockquote>
      <% if place.comments.last.humanized_rating.present? %>
      <b><%= place.comments.last.humanized_rating %></b> -
      <% end %>
      <%= place.comments.last.message %>
      <small><%= place.comments.last.user.email %></small>
    </blockquote>
  </div>
  <% end %>

</div>
<% end %>



<div class="row">
  <div class="col-xs-4 col-centered">
    <%= will_paginate @places, renderer: BootstrapPagination::Rails, previous_label: "Newer", next_label: "Older", inner_window: 2, outer_window: 0 %>
  </div>
</div>